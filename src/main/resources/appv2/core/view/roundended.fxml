<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>


<AnchorPane id="container" prefHeight="400.0" prefWidth="600.0" stylesheets="@roundended.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="appv2.core.view.RoundEndedController">
   <children>
      <Label id="title" alignment="CENTER" stylesheets="@roundended.css" text="Round ended" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
      <Label id="basic-text" stylesheets="@roundended.css" text="Round winner(s):" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="100.0" />
      <VBox fx:id="winnersContainer" layoutX="20.0" layoutY="150.0" prefHeight="200.0" prefWidth="100.0" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="150.0" />
      <Label id="basic-text" layoutX="10.0" layoutY="10.0" stylesheets="@roundended.css" text="The current Scores are:" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="100.0" />
      <VBox fx:id="playerScoresContainer" layoutX="480.0" layoutY="150.0" prefHeight="200.0" prefWidth="100.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="150.0" />
      <Button fx:id="continueBtn" id="next-round-btn" mnemonicParsing="false" stylesheets="@roundended.css" text="Next Round" AnchorPane.bottomAnchor="0.0" AnchorPane.rightAnchor="0.0" />
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</AnchorPane>
