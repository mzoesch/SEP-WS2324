<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane
        id="master-container" stylesheets="@globals.css"
        fx:controller="appv2.core.view.GameInitController"
        xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1"
>
   <children>
      <Label
              text="Setup Game"
              id="title" styleClass="text-xl" stylesheets="@gameinit.css"
              AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"
      />
      <Label
              id="error-msg" stylesheets="@gameinit.css"
              fx:id="errormessagefield"
              AnchorPane.leftAnchor="200.0" AnchorPane.rightAnchor="275.0" AnchorPane.bottomAnchor="0.0"
      />
      <VBox
              id="player-names-container" stylesheets="@gameinit.css"
              fx:id="playernamescontainer"
              AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="100.0" AnchorPane.bottomAnchor="100.0"
      />
      <Button
              text="Cancel"
              styleClass="danger-btn"
              onAction="#onCancelBtn"
              AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
      />
      <Button
              text="Create Session"
              styleClass="primary-btn"
              onAction="#onPlayBtn"
              AnchorPane.bottomAnchor="0.0" AnchorPane.rightAnchor="0.0"
      />
   </children>
</AnchorPane>
