<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>


<?import javafx.scene.layout.VBox?>
<AnchorPane
        id="master-container"
        stylesheets="@globals.css"
        fx:controller="appv2.core.view.GameEndedController"
        xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1"
>
   <children>
      <Label
              text="The Game Has Ended"
              id="title" styleClass="text-2xl" stylesheets="@gameended.css"
              AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"
      />
      <Label
              id="subtitle" styleClass="text-xl" stylesheets="@gameended.css"
              fx:id="winnersubtitlelabel"
              AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="130.0"
      />
      <Label
              text="The Tokens Of Affection From All Players:"
              id="subtitle" styleClass="text-lg" stylesheets="@gameended.css"
              AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="260.0"
      />
      <VBox
              id="vbox" stylesheets="@gameended.css"
              fx:id="playersscorecontainer"
              AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="320.0"
      />
      <Button
              text="Exit App"
              styleClass="danger-btn"
              onAction="#onExitBtn"
              AnchorPane.bottomAnchor="0.0" AnchorPane.rightAnchor="250.0"
      />
      <Button
              text="Main Menu"
              styleClass="primary-btn"
              onAction="#onMainMenuBtn"
              AnchorPane.bottomAnchor="0.0" AnchorPane.rightAnchor="0.0"
      />
   </children>
</AnchorPane>
