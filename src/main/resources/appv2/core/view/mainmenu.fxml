<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane
        id="master-container" stylesheets="@globals.css"
        fx:controller="appv2.core.view.MainMenuController"
        xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1"
>
   <top>
      <AnchorPane BorderPane.alignment="CENTER">
         <children>
            <Label
                    text="Love Letter"
                    styleClass="text-2xl"
                    alignment="CENTER"
                    AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"
            />
            <Label
                    text="\@Magnus Zoeschinger"
                    id="author-title" styleClass="text-xl" stylesheets="@mainmenu.css"
                    alignment="CENTER"
                    AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"
            />
         </children>
      </AnchorPane>
   </top>
   <bottom>
      <AnchorPane BorderPane.alignment="CENTER">
         <children>
            <Button
                    text="Exit"
                    styleClass="danger-btn"
                    onAction="#onExitBtn"
                    AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
            />
            <Button
                    text="Rules"
                    styleClass="secondary-btn"
                    onAction="#onRulesBtn" AnchorPane.bottomAnchor="0.0" AnchorPane.rightAnchor="160.0"
            />
            <Button
                    text="Play"
                    styleClass="primary-btn"
                    onAction="#onPlayBtn" AnchorPane.bottomAnchor="0.0" AnchorPane.rightAnchor="0.0"
            />
         </children>
      </AnchorPane>
   </bottom>
</BorderPane>
